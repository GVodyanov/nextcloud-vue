{
	"prompts": {
		"name": {
			"type": "string",
			"required": true,
			"label": "Project name in lower case"
		},
		"description": {
			"type": "string",
			"required": true,
			"label": "Project description",
			"default": "A Vue.js project"
		},
		"year": {
			"type": "string",
			"required": true,
			"label": "Current year"
		},
		"author": {
			"type": "string",
			"label": "Author"
		},
		"sass": {
			"type": "confirm",
			"message": "Use sass?",
			"default": false
		},
		"router": {
			"type": "confirm",
			"message": "Use vue-router?",
			"default": false
		},
		"vuex": {
			"type": "confirm",
			"message": "Use vuex?",
			"default": false
		}
	},
	"completeMessage":
		"{{#inPlace}}To get started:\n\n  make dev-setup\n  make build-js-production{{else}}To get started:\n\n  cd {{destDirName}}\n  make dev-setup\n  make build-js-production{{/inPlace}}"
}
